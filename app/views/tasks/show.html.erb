<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<p>
  <% if @task.completed == true %>
  <%= "This task is completed" %>
  <% else %>
  <%= "This task is not completed yet" %>
  <% end %>
</p>

<%= link_to "Edit this Task", edit_task_path(@task) %>
<%= link_to "Delete this Task", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete this task ?" } %>
<%= link_to "Back", tasks_path %>
